{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("ournameismud\\explodify\\assetbundles\\resourcefield\\ResourceFieldAsset") %}

{% set options = [] %}
{% for volume in volumes %}
	{% set options = options|merge({(volume.key) : volume.label }) %}	
{% endfor %}

{{ forms.checkboxGroupField({
    label: 'Volumes you want to access',
    id: 'volumes',
    options: options,
    name: 'volumes',
    values: field.volumes })
}}